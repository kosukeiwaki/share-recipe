.header
.logo2
  = image_tag "透過2.png", size: "400x100", alt: "test",class:"logo22"

.main

  .container.col-md-offset-3.col-md-6.col-md-offset-3
    .backbtn
      =link_to recipes_path(current_user) do
        =icon("fas", "backspace", class:"back")
    =form_for @recipe do |f|
      .input-box
        = f.text_field :title, placeholder: "何を食べたの？", class:"title"
        = f.label :image, class: 'image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.text_field :text, placeholder: "ご飯と思い出をシェアしよう！" , rows: "10",class:"text"
      = f.submit "シェアレピ",class:"submit"