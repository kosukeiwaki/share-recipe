#account-page.account-page
  .account-page__inner.clearfix
    .account-box
      .account-page__inner--left.account-page__header
        %h2 ユーザー情報変更
        %h5 アカウントの編集
        = link_to "ログアウト",destroy_user_session_path(current_user),method: :delete,class:'btn'
        = link_to "トップページに戻る", :back, class: 'btn'
      .account-page__inner--right.user-form
        .point
          = form_for(current_user) do |f|
            .field
              .field-label
                = f.label :なまえ
              .field-input
                = f.text_field :name, autofocus: true
            .field
              .field-label
                = f.label :メールアドレス
              .field-input
                = f.email_field :email
            .actions
              = f.submit "Update", class: 'btn'
      .image
        = image_tag "edit.png", size: "400x400", alt: "test"
